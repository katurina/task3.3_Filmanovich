            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://epam.training.by/people"
            xmlns:tns="http://epam.training.by/people">
    <xsd:element name="people">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="person"
                             type="tns:Person"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    <xsd:complexType name="Person">
        <xsd:sequence>
            <xsd:element name="name" type="string"/> <!--type="tns:NameString"/>-->
            <xsd:element name="surname" type="string"/><!--type="tns:NameString"/>-->
            <xsd:element name="telephone" type="string"/><!--type="string"/>-->
            <xsd:element name="email" type="string"/><!--type="tns:EmailString"/>-->
        </xsd:sequence>
    </xsd:complexType>
